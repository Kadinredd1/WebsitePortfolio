# Portfolio Environment Variables
# Copy this file to .env for local development

# =============================================================================
# GITHUB INTEGRATION
# =============================================================================

# GitHub Personal Access Token (Optional - for higher rate limits)
# Get from: GitHub Settings → Developer settings → Personal access tokens
VITE_GITHUB_TOKEN=your_github_token_here

# GitHub Username (already set in githubService.ts, but can be overridden here)
VITE_GITHUB_USERNAME=Kadinredd1

# =============================================================================
# BACKEND API CONFIGURATION
# =============================================================================

# Backend API Base URL
# Development (default)
VITE_API_BASE_URL=http://localhost:5000

# Production (uncomment when deploying)
# VITE_API_BASE_URL=https://your-backend-domain.com

# API Timeout (in milliseconds)
VITE_API_TIMEOUT=10000

# =============================================================================
# APP CONFIGURATION
# =============================================================================

# App Name
REACT_APP_NAME=Kadin Redd Portfolio

# App Version
REACT_APP_VERSION=1.0.0

# Environment (development, staging, production)
REACT_APP_ENV=development

# Debug Mode (true/false)
REACT_APP_DEBUG=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable GitHub Integration
REACT_APP_ENABLE_GITHUB=true

# Enable Admin Panel
REACT_APP_ENABLE_ADMIN=true

# Enable Project Management
REACT_APP_ENABLE_PROJECTS=true

# Enable Analytics (Google Analytics, etc.)
REACT_APP_ENABLE_ANALYTICS=false

# =============================================================================
# ANALYTICS (Optional)
# =============================================================================

# Google Analytics ID (if using GA)
REACT_APP_GA_TRACKING_ID=your_ga_tracking_id

# Google Tag Manager ID (if using GTM)
REACT_APP_GTM_ID=your_gtm_id

# =============================================================================
# SOCIAL MEDIA & CONTACT
# =============================================================================

# LinkedIn Profile URL
REACT_APP_LINKEDIN_URL=https://linkedin.com/in/your-profile

# Twitter/X Profile URL
REACT_APP_TWITTER_URL=https://twitter.com/your-handle

# Email Address
REACT_APP_CONTACT_EMAIL=kadinredd08@gmail.com

# Portfolio Website URL
REACT_APP_PORTFOLIO_URL=https://your-portfolio-domain.com

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================

# JWT Secret (for admin authentication)
REACT_APP_JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Session Timeout (in minutes)
REACT_APP_SESSION_TIMEOUT=1440

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================

# Maximum file size for project images (in bytes)
REACT_APP_MAX_FILE_SIZE=5242880

# Allowed file types for project images
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif

# =============================================================================
# PERFORMANCE & CACHING
# =============================================================================

# Cache duration for GitHub data (in seconds)
REACT_APP_GITHUB_CACHE_DURATION=3600

# Cache duration for projects data (in seconds)
REACT_APP_PROJECTS_CACHE_DURATION=1800

# Enable service worker caching
REACT_APP_ENABLE_CACHING=true

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================

# Enable React DevTools
REACT_APP_ENABLE_DEVTOOLS=true

# Enable detailed logging
REACT_APP_ENABLE_LOGGING=true

# Mock API responses (for development)
REACT_APP_USE_MOCK_API=false

# =============================================================================
# DEPLOYMENT & BUILD
# =============================================================================

# Build output directory
REACT_APP_BUILD_DIR=build

# Public URL path (for subdirectory deployment)
REACT_APP_PUBLIC_URL=

# Source map generation (true/false)
REACT_APP_GENERATE_SOURCEMAP=true

# =============================================================================
# CUSTOMIZATION
# =============================================================================

# Primary theme color
REACT_APP_PRIMARY_COLOR=#40e0d0

# Secondary theme color
REACT_APP_SECONDARY_COLOR=#8a2be2

# Accent color
REACT_APP_ACCENT_COLOR=#ff6b6b

# =============================================================================
# NOTIFICATIONS & ALERTS
# =============================================================================

# Enable toast notifications
REACT_APP_ENABLE_NOTIFICATIONS=true

# Notification duration (in milliseconds)
REACT_APP_NOTIFICATION_DURATION=5000

# =============================================================================
# SEO & META
# =============================================================================

# Default meta title
REACT_APP_META_TITLE=Kadin Redd - Full Stack Developer Portfolio

# Default meta description
REACT_APP_META_DESCRIPTION=Full stack developer specializing in React, Node.js, and modern web technologies. View my projects and experience.

# Default meta keywords
REACT_APP_META_KEYWORDS=developer,portfolio,react,nodejs,javascript,typescript,fullstack

# =============================================================================
# THIRD-PARTY SERVICES
# =============================================================================

# Sentry DSN (for error tracking)
REACT_APP_SENTRY_DSN=your_sentry_dsn

# Hotjar ID (for user analytics)
REACT_APP_HOTJAR_ID=your_hotjar_id

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# Auto-save interval (in milliseconds)
REACT_APP_AUTO_SAVE_INTERVAL=30000

# Enable offline mode
REACT_APP_ENABLE_OFFLINE=true

# =============================================================================
# NOTES
# =============================================================================

# IMPORTANT: 
# 1. Copy this file to .env for local development
# 2. Never commit .env files to version control
# 3. Set production variables in your hosting platform
# 4. Keep sensitive data secure
# 5. Rotate tokens regularly

# To use this file:
# 1. Copy to .env: cp env.example .env
# 2. Replace placeholder values with your actual data
# 3. Set production variables in your hosting platform (Vercel, Netlify, etc.) 